.card-body .list-group #mCSB_1_container .card-contacts-search input.form-control {
    width: 100%;
    height: 100%;
    border: none;
    box-shadow: none;
    left: 0;
    top: 0;
    margin: 0;
    font-size: 15px;
    padding: 16px 5%;
    text-indent: 0;
    background-color: #EEF5F9;
    background-image: none;
}
.card-body .list-group #mCSB_1_container .card-contacts-search .form-group {
    margin-top: 0;
}
.form-group .type_text_box_div .form-control.form-rounded.input-lightGray {
    border-top-right-radius: 0;
    border-bottom-right-radius: 0;
    width: 100%;
    float: left;
    max-width: 100%;
}
.form-group .type_text_box_div .emoji-picker-container {
    width: 90%;
    float: left;
}
.record_icon {
    float:  left;
    height: 40px;
    padding: 8px 7px;
    background: #EEF5F9;
    border-top-right-radius: 30px;
	cursor: pointer;
    border-bottom-right-radius: 30px;
}
.smily_icon {
    background: #EEF5F9;
    float: left;
    padding: 7px 5px;
    height: 40px;
}
@media screen and (max-width: 820px) {
	.form-group .type_text_box_div .emoji-picker-container {
		width: 88%;
	}
}
@media screen and (max-width: 662px) {
	.form-group .type_text_box_div .emoji-picker-container {
		width: 85%;
	}
}
@media screen and (max-width: 565px) {
	.form-group .type_text_box_div .emoji-picker-container {
		width: 80%;
	}
}
@media screen and (max-width: 470px) {
	.form-group .type_text_box_div .emoji-picker-container {
		width: 75%;
	}
}
@media screen and (max-width: 412px) {
	.form-group .type_text_box_div .emoji-picker-container {
		width: 68%;
	}
}
@media screen and (max-width: 412px) {
	.form-group .type_text_box_div .emoji-picker-container {
		width: 60%;
	}
}